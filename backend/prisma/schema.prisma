// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  firstName String
  lastName  String
  role      UserRole @default(STAFF)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  receipts         Receipt[]
  deliveries       Delivery[]
  transfers        InternalTransfer[]
  adjustments      StockAdjustment[]
  stockMoves       StockMove[]
  otpCodes         OTPCode[]

  @@map("users")
}

enum UserRole {
  ADMIN
  MANAGER
  STAFF
}

model OTPCode {
  id        String   @id @default(uuid())
  userId    String
  code      String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("otp_codes")
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  products Product[]

  @@map("categories")
}

model Product {
  id              String   @id @default(uuid())
  name            String
  sku             String   @unique
  description     String?
  categoryId      String?
  unitOfMeasure   String   @default("Unit")
  reorderPoint    Int      @default(0)
  optimalStock    Int      @default(0)
  imageUrl        String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  category         Category?           @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  stockLevels      Stock[]
  receiptLines     ReceiptLine[]
  deliveryLines    DeliveryLine[]
  transferLines    TransferLine[]
  adjustmentLines  AdjustmentLine[]
  stockMoves       StockMove[]

  @@map("products")
}

model Warehouse {
  id        String   @id @default(uuid())
  name      String   @unique
  code      String   @unique
  address   String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  locations Location[]

  @@map("warehouses")
}

model Location {
  id          String   @id @default(uuid())
  warehouseId String
  name        String
  code        String   @unique
  type        LocationType @default(INTERNAL)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  warehouse            Warehouse           @relation(fields: [warehouseId], references: [id], onDelete: Cascade)
  stockLevels          Stock[]
  receipts             Receipt[]
  deliveries           Delivery[]
  transfersFrom        InternalTransfer[]  @relation("TransferFrom")
  transfersTo          InternalTransfer[]  @relation("TransferTo")
  adjustments          StockAdjustment[]
  stockMovesFrom       StockMove[]         @relation("MoveFrom")
  stockMovesTo         StockMove[]         @relation("MoveTo")

  @@unique([warehouseId, name])
  @@map("locations")
}

enum LocationType {
  SUPPLIER
  INTERNAL
  CUSTOMER
  PRODUCTION
  SCRAP
}

model Stock {
  id         String   @id @default(uuid())
  productId  String
  locationId String
  quantity   Float    @default(0)
  reserved   Float    @default(0)
  available  Float    @default(0)
  updatedAt  DateTime @updatedAt

  product  Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  location Location @relation(fields: [locationId], references: [id], onDelete: Cascade)

  @@unique([productId, locationId])
  @@map("stock")
}

model Receipt {
  id              String        @id @default(uuid())
  reference       String        @unique
  supplierId      String?
  supplierName    String
  locationId      String
  status          OperationStatus @default(DRAFT)
  scheduledDate   DateTime?
  validatedDate   DateTime?
  userId          String
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  location Location       @relation(fields: [locationId], references: [id])
  user     User           @relation(fields: [userId], references: [id])
  lines    ReceiptLine[]
  moves    StockMove[]

  @@map("receipts")
}

model ReceiptLine {
  id           String  @id @default(uuid())
  receiptId    String
  productId    String
  quantity     Float
  receivedQty  Float   @default(0)

  receipt Receipt @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("receipt_lines")
}

model Delivery {
  id              String        @id @default(uuid())
  reference       String        @unique
  customerId      String?
  customerName    String
  locationId      String
  status          OperationStatus @default(DRAFT)
  scheduledDate   DateTime?
  validatedDate   DateTime?
  userId          String
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  location Location       @relation(fields: [locationId], references: [id])
  user     User           @relation(fields: [userId], references: [id])
  lines    DeliveryLine[]
  moves    StockMove[]

  @@map("deliveries")
}

model DeliveryLine {
  id          String  @id @default(uuid())
  deliveryId  String
  productId   String
  quantity    Float
  deliveredQty Float  @default(0)

  delivery Delivery @relation(fields: [deliveryId], references: [id], onDelete: Cascade)
  product  Product  @relation(fields: [productId], references: [id])

  @@map("delivery_lines")
}

model InternalTransfer {
  id              String        @id @default(uuid())
  reference       String        @unique
  fromLocationId  String
  toLocationId    String
  status          OperationStatus @default(DRAFT)
  scheduledDate   DateTime?
  validatedDate   DateTime?
  userId          String
  notes           String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  fromLocation Location       @relation("TransferFrom", fields: [fromLocationId], references: [id])
  toLocation   Location       @relation("TransferTo", fields: [toLocationId], references: [id])
  user         User           @relation(fields: [userId], references: [id])
  lines        TransferLine[]
  moves        StockMove[]

  @@map("internal_transfers")
}

model TransferLine {
  id          String  @id @default(uuid())
  transferId  String
  productId   String
  quantity    Float

  transfer InternalTransfer @relation(fields: [transferId], references: [id], onDelete: Cascade)
  product  Product          @relation(fields: [productId], references: [id])

  @@map("transfer_lines")
}

model StockAdjustment {
  id              String        @id @default(uuid())
  reference       String        @unique
  locationId      String
  status          OperationStatus @default(DRAFT)
  adjustmentDate  DateTime?
  userId          String
  reason          String?
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  location Location          @relation(fields: [locationId], references: [id])
  user     User              @relation(fields: [userId], references: [id])
  lines    AdjustmentLine[]
  moves    StockMove[]

  @@map("stock_adjustments")
}

model AdjustmentLine {
  id            String  @id @default(uuid())
  adjustmentId  String
  productId     String
  systemQty     Float
  countedQty    Float
  difference    Float

  adjustment StockAdjustment @relation(fields: [adjustmentId], references: [id], onDelete: Cascade)
  product    Product         @relation(fields: [productId], references: [id])

  @@map("adjustment_lines")
}

model StockMove {
  id              String    @id @default(uuid())
  reference       String
  productId       String
  fromLocationId  String?
  toLocationId    String?
  quantity        Float
  moveType        MoveType
  status          MoveStatus @default(DONE)
  userId          String
  receiptId       String?
  deliveryId      String?
  transferId      String?
  adjustmentId    String?
  createdAt       DateTime  @default(now())

  product      Product           @relation(fields: [productId], references: [id])
  fromLocation Location?         @relation("MoveFrom", fields: [fromLocationId], references: [id])
  toLocation   Location?         @relation("MoveTo", fields: [toLocationId], references: [id])
  user         User              @relation(fields: [userId], references: [id])
  receipt      Receipt?          @relation(fields: [receiptId], references: [id], onDelete: Cascade)
  delivery     Delivery?         @relation(fields: [deliveryId], references: [id], onDelete: Cascade)
  transfer     InternalTransfer? @relation(fields: [transferId], references: [id], onDelete: Cascade)
  adjustment   StockAdjustment?  @relation(fields: [adjustmentId], references: [id], onDelete: Cascade)

  @@map("stock_moves")
}

enum OperationStatus {
  DRAFT
  WAITING
  READY
  DONE
  CANCELLED
}

enum MoveType {
  RECEIPT
  DELIVERY
  TRANSFER
  ADJUSTMENT
}

enum MoveStatus {
  DRAFT
  DONE
  CANCELLED
}

